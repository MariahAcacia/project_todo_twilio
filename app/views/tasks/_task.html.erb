<tbody>
  <% @tasks.each do |task| %>
    <% if task.soft_delete == false %>
    <tr>
    <% else %>
    <tr class="soft_deleted">
    <% end %>
      <td>
        <%= task.description %>
      </td>
      <td>
        <%= task.complete_by_date %>
      </td>
      <td>
        <%= link_to "See Details", task_path(task) %>
      </td>
      <td>
        <%= link_to "Edit", edit_task_path(task) %>
      </td>
      <td>
        <%= link_to "Soft Delete", task_path(task) %>
      <td>
        <%= link_to "Delete", 'tasks#soft_delete', method: :delete, data: {confirm: "Are yous sure you want to delete this task?"} %>
      </td>
    </tr>
  <% end %>

</tbody>
